<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skyBlue"
    tools:context=".ChosenActivity">

    <TextView
        android:id="@+id/tName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:text="@string/businessName"
        android:layout_marginTop="20dp"
        android:textColor="#FFF"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/tCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="123dp"
        android:text="@string/businessCost"
        android:textColor="#FFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tCost"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/businessRating"
        android:textColor="#FFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tRating"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/businessPhone"
        android:textColor="#FFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tPhone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/businessAddress"
        android:textColor="#FFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!--<TextView-->
        <!--android:id="@+id/tZip"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@+id/tAddress"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:text="Zipcode"-->
        <!--android:textColor="#FFF"-->
        <!--android:textSize="18sp"-->
        <!--android:textStyle="bold" />-->

    <Button
        android:id="@+id/button0"
        android:background="@drawable/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="220dp"
        android:textColor="@color/textColor"
        android:text="@string/callNumber"
        android:onClick="call"/>

    <Button
        android:id="@+id/button1"
        android:background="@drawable/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="160dp"
        android:textColor="@color/textColor"
        android:text="@string/openMap"
        android:onClick="maps"/>

    <Button
        android:id="@+id/button2"
        android:background="@drawable/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:textColor="@color/textColor"
        android:text="@string/viewYelp" />

    <Button
        android:id="@+id/button3"
        android:background="@drawable/button2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:textColor="@color/skyBlue"
        android:text="@string/returnHome"
        android:onClick="home" />

</RelativeLayout>